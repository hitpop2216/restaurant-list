<div class="row">
  <div class="col-md-6 m-auto">
    <div class="card card-body mt-5 mb-5">
      <h1 class="mt-3 text-center">Login</h1>
      {{> message}}
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">Email<span class="text-danger">*</span></label>
          <input type="email" name="email" name="email" placeholder="Enter Email" class="form-control" required>
        </div>
        <div class="form-group">
          <label for="password">Password<span class="text-danger">*</span></label>
          <input type="password" name="password" name="password" placeholder="Enter Password" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-info btn-block">Login</button>
        <a href="/auth/facebook" class="btn btn-primary btn-block">Facebook Login</a>
        <a href="/auth/google" class="btn btn-secondary btn-block">Google Login</a>
      </form>
      <p class="lead mt-3">
        No Account? <a href="/users/register">Register</a>
      </p>
    </div>
  </div>
</div>