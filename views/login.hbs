<div class="row">
  <div class="col-md-6 m-auto">
    <div class="card card-body mt-5 mb-5">
      <h1 class="mt-3 text-center">Login</h1>
      {{> message}}
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">Email<span class="text-danger">*</span></label>
          <input type="email" name="email" name="email" placeholder="Enter Email" class="form-control" required>
        </div>
        <div class="form-group">
          <label for="password">Password<span class="text-danger">*</span></label>
          <input type="password" name="password" name="password" placeholder="Enter Password" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-info btn-block">Login</button>
        <div class="divider d-flex align-items-center my-4">
          <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p>
        </div>
        <a href="/auth/facebook" class="btn btn-md btn-block btn-primary mb-2" style="background-color: #3b5998;">
          <i class="fab fa-facebook-f me-2"></i>
          Login with Facebook
        </a>
        <a href="/auth/google" class="btn btn-md btn-block btn-primary" style="background-color: #dd4b39;">
          <i class="fab fa-google me-2"></i>
          Login with Google
        </a>
      </form>
      <p class="lead mt-3">
        No Account? <a href="/users/register">Register</a>
      </p>
    </div>
  </div>
</div>